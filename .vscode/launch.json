{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  // ${workspaceFolder} and predefined variables: https://code.visualstudio.com/docs/editor/variables-reference#_predefined-variables
  "version": "0.2.0",
  "configurations": [
    // https://github.com/python-poetry/poetry/issues/5354#issuecomment-1471612327
    {
      "name": "Pytest: Run Current Test File",
      "type": "debugpy",
      "request": "launch",
      "python": "${workspaceFolder}/.venv/bin/python",
      "cwd": "${workspaceFolder}",
      "module": "pytest",
      "args": ["${file}", "${input:pytestArgs}"],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Pytest: Run All Tests",
      "type": "debugpy",
      "request": "launch",
      "python": "${workspaceFolder}/.venv/bin/python",
      "cwd": "${workspaceFolder}",
      "module": "pytest",
      "args": ["${input:pytestArgs}"],
      // "args": "${command:pickArgs}",
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Pytest: Attach to Docker",
      "type": "debugpy",
      "request": "attach",
      "connect": { "host": "localhost", "port": 5678 },
      "pathMappings": [{ "localRoot": "${workspaceFolder}", "remoteRoot": "." }]
    },
    {
      "name": "Debug FastAPI (Port 8888)",
      "type": "debugpy",
      "request": "launch",
      "env": {
        "ENVIRONMENT": "DEVELOPMENT",
        "DEV_ENV": "LOCAL"
      },
      "python": "${workspaceFolder}/.venv/bin/python",
      "cwd": "${workspaceFolder}",
      "module": "uvicorn",
      "args": ["--reload", "--port=8888", "src.main:app"], // "--port=${command:pickArgs}"
      "jinja": true,
    },
  ],
  "inputs": [
    {
      "id": "pytestArgs",
      "default": "-rP",
      "type": "pickString",
      "options": ["-s", "-rP"],
      "description": "Choose behavior for stdout"
    },
  ],
}
